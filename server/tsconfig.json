{
  "compilerOptions": {
    "outDir": "build",
    "module": "commonjs",
    "target": "es2017",
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "lib": [
      "es2017"
    ],
    "downlevelIteration": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*",
    "*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}